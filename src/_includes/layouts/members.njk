---
layout: layouts/base.njk
---

<div class="space-y-8">
  <article class="prose">
    {{ content | safe }}
  </article>
  <div class="space-y-4">
    {% for member in collections.member %}
      <div class="p-1 bg-gradient-ne-{{member.data.color}}">
        <div class="p-4 bg-white">
          <h3 class="text-xl font-bold">{{ member.data.title }}</h3>
          <article class="prose">
            {{ member.templateContent | safe }} 
          </article>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
